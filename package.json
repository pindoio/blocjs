{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/cli": "^7.10.1",
    "@babel/core": "^7.10.2",
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-react": "^7.10.1",
    "@babel/plugin-transform-runtime": "^7.10.1",
    "lerna": "^3.20.2",
    "semantic-release": "^17.0.8",
    "jest": "^26.0.1"
  },
  "jest": {
    "testMatch": [
      "**/packages/**/test/*.js"
    ],
    "collectCoverageFrom": [
      "**/packages/**/src/*.js"
    ],
    "coverageReporters": [
      "lcov",
      "text",
      "html"
    ]
  },
  "scripts": {
    "test": "jest",
    "bootstrap": "lerna bootstrap",
    "clean": "lerna exec -- rm -rf dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pindoio/blocjs.git"
  }
}
